<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="This is a joke line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/btNewJoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Joke"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginRight="10dp"
                />

            <Button
                android:id="@+id/btAddToFav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to favourites"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            >

            <Button
                android:id="@+id/btAddNewJoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a new Joke"
                android:textSize="15dp"
                android:padding="10dp"
                android:background="@color/white"
                android:layout_marginRight="10dp"/>

            <Button
                android:id="@+id/btShareJoke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="10dp"
                android:text="Share Joke"
                android:textSize="15dp"
                />


        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>